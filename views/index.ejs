<%- include('partials/header') %>
<nav class="navbar navbar-expand-lg navbar-dark bg-dark d-none d-md-block">
    <div class="row text-center align-items-center">
                <div class="col">
                        <h5 style="color: aliceblue;">Featured Matches</h5>
                </div>
        
            <% var i=0; while(i<5){  %>
            <div class="col">
                
                    <a class="nav-link" href="/match/<%= navData[i].unique_id%>" style="text-decoration: none; color: aliceblue;"><%= navData[i]['team-1'] %> <br><span style="color: red;">VS</span> <br><%= navData[i]['team-2'] %></a>
                
            </div>
            <% i++}%>
            
            
        
        
    
</div>
</nav>


<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
                <div class="carousel-item active">
                        <img class="d-block w-100 img-fluid" src="<%= images[0] %>" alt="First slide">
                        <div class="carousel-caption d-none d-md-block">
                            <h1 class="text-light bg-dark" style="opacity: 0.7;">  <a class="text-light" href="/match/<%= navData[0].unique_id%>"><%= navData[0]['team-1'] %> <br><span style="color: red;">VS</span> <br><%= navData[0]['team-2'] %></a> </h1>
                            
                          </div>
                    </div>
        <% for(var i=1;i<5;i++){ %>
          <div class="carousel-item">
            <img class="d-block w-100" src="<%= images[i] %>" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h1 class="text-light bg-dark" style="opacity: 0.7;"><a class="text-light" href="/match/<%= navData[i].unique_id%>"><%= navData[i]['team-1'] %> <br><span style="color: red;">VS</span> <br><%= navData[i]['team-2'] %></a> </h1>
                
              </div>
        </div>
          
        <% }%>

        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>



<div class="container mt-3">
        <div class="row text-center">
                <% navData.forEach(function(data){ %>

                <div class="col-md-3 mb-2">
                        <div class="card" >
                                
                        <div class="card-body">
                                <h5 class="card-title"><%= data['team-1'] %> <br><span style="color: red;">VS</span> <br><%= data['team-2'] %></h5>
                                <p class="card-text"
                                <% if(data.matchStarted==true){%>
                                        <h4>Match status: <span style="color: red;">Ongoing</span> </h4>
                                    <% } else{ %>
                                        <h4>Match status: <span style="color: red;">Not yet started</span></h4>
                                    <% } %>

                                    <%= new Date(data.dateTimeGMT).toLocaleString() %>
                                </p>
                                <a href="/match/<%= data.unique_id%>" class="btn btn-primary">More details</a>
                        </div>
                        </div>
                </div>
                <% }) %>

        </div>
</div>

<%- include('partials/footer') %>